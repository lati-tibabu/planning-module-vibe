<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Strategic Plan Tree View -->
    <record id="view_strategic_plan_tree" model="ir.ui.view">
        <field name="name">planning.strategic_plan.tree</field>
        <field name="model">planning.strategic_plan</field>
        <field name="arch" type="xml">
            <tree string="Strategic Plans">
                <field name="name"/>
                <field name="start_year"/>
                <field name="end_year"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Strategic Plan Form View -->
    <record id="view_strategic_plan_form" model="ir.ui.view">
        <field name="name">planning.strategic_plan.form</field>
        <field name="model">planning.strategic_plan</field>
        <field name="arch" type="xml">
            <form string="Strategic Plan">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="start_year"/>
                            <field name="end_year"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Themes">
                            <field name="theme_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Theme Form View -->
    <record id="view_theme_form" model="ir.ui.view">
        <field name="name">planning.theme.form</field>
        <field name="model">planning.theme</field>
        <field name="arch" type="xml">
            <form string="Theme">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="strategic_plan_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Strategies">
                            <field name="strategy_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Strategy Form View -->
    <record id="view_strategy_form" model="ir.ui.view">
        <field name="name">planning.strategy.form</field>
        <field name="model">planning.strategy</field>
        <field name="arch" type="xml">
            <form string="Strategy">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="sequence"/>
                            <field name="theme_id"/>
                            <field name="strategic_plan_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Yearly Targets">
                            <group>
                                <group string="Year 1">
                                    <field name="display_year_1" invisible="1"/>
                                    <label for="target_year_1" string="Target" attrs="{'invisible': [('display_year_1', '=', '')]}"/>
                                    <field name="target_year_1" attrs="{'invisible': [('display_year_1', '=', '')]}"/>
                                </group>
                                <group string="Year 2">
                                    <field name="display_year_2" invisible="1"/>
                                    <label for="target_year_2" string="Target" attrs="{'invisible': [('display_year_2', '=', '')]}"/>
                                    <field name="target_year_2" attrs="{'invisible': [('display_year_2', '=', '')]}"/>
                                </group>
                            </group>
                            <group>
                                <group string="Year 3">
                                    <field name="display_year_3" invisible="1"/>
                                    <label for="target_year_3" string="Target" attrs="{'invisible': [('display_year_3', '=', '')]}"/>
                                    <field name="target_year_3" attrs="{'invisible': [('display_year_3', '=', '')]}"/>
                                </group>
                                <group string="Year 4">
                                    <field name="display_year_4" invisible="1"/>
                                    <label for="target_year_4" string="Target" attrs="{'invisible': [('display_year_4', '=', '')]}"/>
                                    <field name="target_year_4" attrs="{'invisible': [('display_year_4', '=', '')]}"/>
                                </group>
                            </group>
                            <group>
                                <group string="Year 5">
                                    <field name="display_year_5" invisible="1"/>
                                    <label for="target_year_5" string="Target" attrs="{'invisible': [('display_year_5', '=', '')]}"/>
                                    <field name="target_year_5" attrs="{'invisible': [('display_year_5', '=', '')]}"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Strategic Plan Action -->
    <record id="action_strategic_plan" model="ir.actions.act_window">
        <field name="name">Strategic Plans</field>
        <field name="res_model">planning.strategic_plan</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
