<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Weekly Report Tree View -->
    <record id="view_weekly_report_tree" model="ir.ui.view">
        <field name="name">planning.weekly_report.tree</field>
        <field name="model">planning.weekly_report</field>
        <field name="arch" type="xml">
            <tree string="Gabaasa Torbee - Weekly Reports" decoration-success="status=='on_track'" 
                  decoration-warning="status=='at_risk'" decoration-danger="status=='off_track'">
                <field name="name"/>
                <field name="year"/>
                <field name="week_number"/>
                <field name="week_start_date"/>
                <field name="week_end_date"/>
                <field name="hojii_torbee"/>
                <field name="hanga_torbee"/>
                <field name="percentage_achieved"/>
                <field name="cumulative_percentage"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Weekly Report Form View -->
    <record id="view_weekly_report_form" model="ir.ui.view">
        <field name="name">planning.weekly_report.form</field>
        <field name="model">planning.weekly_report</field>
        <field name="arch" type="xml">
            <form string="Gabaasa Torbee - Weekly Report">
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Odeeffannoo Bu'uuraa - Basic Information">
                            <field name="year"/>
                            <field name="week_number"/>
                            <field name="week_start_date"/>
                            <field name="week_end_date"/>
                        </group>
                        <group string="Walitti Dhufeenya - Linkage">
                            <field name="annual_plan_id"/>
                            <field name="main_category_id"/>
                            <field name="sub_activity_id"/>
                        </group>
                    </group>
                    <group>
                        <group string="Odeeffannoo Torbee - Weekly Data">
                            <field name="hojii_torbee"/>
                            <field name="hanga_torbee"/>
                            <field name="percentage_achieved" widget="percentage"/>
                        </group>
                        <group string="Walitti Qabamiinsa - Cumulative">
                            <field name="cumulative_plan"/>
                            <field name="cumulative_actual"/>
                            <field name="cumulative_percentage" widget="percentage"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Yaadannoo barreessi..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Weekly Report Kanban View -->
    <record id="view_weekly_report_kanban" model="ir.ui.view">
        <field name="name">planning.weekly_report.kanban</field>
        <field name="model">planning.weekly_report</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="week_start_date"/>
                <field name="week_end_date"/>
                <field name="hojii_torbee"/>
                <field name="hanga_torbee"/>
                <field name="percentage_achieved"/>
                <field name="cumulative_percentage"/>
                <field name="status"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                </div>
                                <span class="badge badge-pill" 
                                      t-attf-class="badge badge-pill #{record.status.raw_value == 'on_track' ? 'badge-success' : record.status.raw_value == 'at_risk' ? 'badge-warning' : 'badge-danger'}">
                                    <field name="status"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="week_start_date"/> - <field name="week_end_date"/>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <span>Hojii: <field name="hojii_torbee"/></span><br/>
                                    <span>Hanga: <field name="hanga_torbee"/></span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <span>Weekly: <field name="percentage_achieved" widget="percentage"/>%</span><br/>
                                    <span>Cumulative: <field name="cumulative_percentage" widget="percentage"/>%</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Weekly Report Pivot View -->
    <record id="view_weekly_report_pivot" model="ir.ui.view">
        <field name="name">planning.weekly_report.pivot</field>
        <field name="model">planning.weekly_report</field>
        <field name="arch" type="xml">
            <pivot string="Xiinxala Gabaasa - Report Analysis">
                <field name="year" type="col"/>
                <field name="main_category_id" type="row"/>
                <field name="hojii_torbee" type="measure"/>
                <field name="hanga_torbee" type="measure"/>
                <field name="percentage_achieved" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Weekly Report Graph View -->
    <record id="view_weekly_report_graph" model="ir.ui.view">
        <field name="name">planning.weekly_report.graph</field>
        <field name="model">planning.weekly_report</field>
        <field name="arch" type="xml">
            <graph string="Taatee Gabaasa - Report Chart" type="line">
                <field name="week_number"/>
                <field name="hojii_torbee" type="measure"/>
                <field name="hanga_torbee" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Weekly Report Dashboard Action -->
    <record id="action_weekly_report" model="ir.actions.act_window">
        <field name="name">Gabaasa Torbee - Weekly Report</field>
        <field name="res_model">planning.weekly_report</field>
        <field name="view_mode">kanban,tree,form,pivot,graph</field>
    </record>

</odoo>
